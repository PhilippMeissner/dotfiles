# Git aliases <3
alias gpl='git pull'
alias gps='git push'
alias gst='git status'
alias gc='git commit'
alias gap='git add --patch'

# General aliases
alias be='bundle exec'

# Handy for zeitkit
alias zlog="git log --all --author='Phil' --reverse --format=%B --max-count=80 --since='2 days ago' | sed '/^$/d' | sed 's/^/* /'"

# Other helpful
alias log-today="vim $(date +%Y-%m-%d).md"

alias sl="ls"
alias l="ls -la"
alias c="clear"
alias mig="bundle exec rake db:migrate"
alias berr="bundle exec rake routes"

# Browse directly to zeitio
alias zeit="cd && cd Desktop/zeitio/ && ls"
