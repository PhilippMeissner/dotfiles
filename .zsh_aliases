# Git aliases <3
alias gpl='git pull'
alias gps='git push'
alias gst='git status'
alias gci='git commit'
alias gca='git commit -a'
alias gdf='git diff'
alias gdc='git diff --cached'
alias gad='git add'
alias gap='git add --patch'
alias gri='git rebase -i'

# General aliases
alias be='bundle exec'
alias dms='bundle exec rake db:drop && bundle exec rake db:schema:load && bundle exec rake db:seed'
alias gmj='gco develop && git push origin develop && gco master && git pull origin master && gm develop && git push origin master && gco en && git pull origin en && gm master && git push origin en && gco de && git pull origin de && gm master && git push origin develop de && gco develop'

# mac related
alias chromeunsafe='open -a Google\ Chrome --args --disable-web-security'

# Postgres
alias pg-start='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start'
alias pg-stop='pg_ctl -D /usr/local/var/postgres stop -s -m fast'
